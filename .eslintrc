{
    "extends": "eslint:recommended",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true,
            "jsx": true
        }
    },
    "plugins": [
        "react"
    ],
    "rules": {
        # "strict": [2, "function"],
        # "no-undef": 2,
        # "no-console": 0,
        # "arrow-parens": [2, "always"],
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2
    }
}
